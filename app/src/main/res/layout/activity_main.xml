<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edinburgh_cover"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/edinburgh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edinburgh"
        android:paddingStart="@dimen/padding_max"
        android:paddingEnd="@dimen/padding_med_min"
        android:layout_above="@id/edinburgh_information"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/padding_min"/>

    <TextView
        android:id="@+id/edinburgh_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edinburgh_information"
       android:layout_above="@id/button"
        android:layout_marginStart="@dimen/padding_max"
        android:layout_marginEnd="@dimen/padding_max"
        android:layout_marginBottom="@dimen/padding_med_max"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/take_tour"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/padding_max"
        android:layout_marginBottom="60dp"
        android:textSize="20sp"
        android:drawSelectorOnTop="true"
        android:background="@drawable/rounded_edges"/>

</RelativeLayout>