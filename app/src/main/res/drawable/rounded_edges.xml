<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The Normal state of the button -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/purple_400" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- The state when the button is being or clicked -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_400" />
            <!--apply a border around button-->
            <stroke android:width="1dp" android:color="@color/purple_400" />
            <!-- make the button corners rounded-->
            <corners android:radius="25dp" />
        </shape>
    </item>


</selector>